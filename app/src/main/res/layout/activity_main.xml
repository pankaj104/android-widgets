<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10sp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10sp"
        android:drawableLeft="@drawable/ic_launcher_background"
        android:drawableRight="@drawable/ic_launcher_foreground"
        android:ellipsize="end"
        android:enabled="true"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:lines="1"
        android:maxLength="16"
        android:paddingTop="5sp"
        android:paddingRight="5sp"

        android:text="Hello World!"
        android:textColor="#0F1B8F"

        android:textSize="14sp"
        android:textStyle="italic |bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:ems="10"
        android:hint="@string/enter_your_name"
        android:inputType="textPersonName"
        android:paddingTop="5sp"
        android:paddingRight="5sp"
        android:text="Name" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:background="#ACAEDF"
        android:enabled="false"
        android:paddingTop="5sp"
        android:paddingRight="5sp"
        android:text="Button"
        android:textSize="26sp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:buttonTint="@color/colorPrimary"
        android:checked="true"
        android:text="This is a CheckBox" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:checked="true"
            android:shadowColor="#67AF14"
            android:text="RadioButton"
            android:textColorHighlight="#9C27B0" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:text="RadioButton" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:text="ToggleButton" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:text="Switch"
            android:thumbTint="@color/colorPrimaryDark"
            android:trackTint="@color/colorPrimary" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="right"
            android:layout_marginBottom="5sp"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_input_add" />
    </RadioGroup>

</LinearLayout>